# ─── OdooForge Configuration ──────────────────────────────────────
# Copy this file to .env and fill in your values.

# Odoo Connection
ODOO_URL=http://localhost:8069
ODOO_MASTER_PASSWORD=admin
ODOO_DEFAULT_DB=odoo
ODOO_ADMIN_USER=admin
ODOO_ADMIN_PASSWORD=admin

# PostgreSQL Direct Connection (for raw SQL, backups)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo

# Docker (auto-detected if not set)
# DOCKER_COMPOSE_PATH=/path/to/docker

# Snapshots (defaults to <docker_path>/snapshots)
# ODOOFORGE_SNAPSHOTS_DIR=/path/to/snapshots
